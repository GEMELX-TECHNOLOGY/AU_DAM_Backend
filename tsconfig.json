{
  "compilerOptions": {
    /* 📂 Salida de compilación */
    "outDir": "dist",
    "rootDir": "src",

    /* ⚙️ Compatibilidad con Node moderno */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    /* ✅ Para imports sin problemas */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* 🛡️ Chequeo de tipos */
    "strict": true,
    "skipLibCheck": true,

    /* 📦 Permitir .js y JSON */
    "allowJs": true,
    "resolveJsonModule": true,

    /* ✨ Reescribe imports para que Node los entienda */
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
