{
  "compilerOptions": {
    /* ğŸ“‚ Salida de compilaciÃ³n */
    "outDir": "dist",
    "rootDir": "src",

    /* âš™ï¸ Compatibilidad con Node moderno */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    /* âœ… Para imports sin problemas */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* ğŸ›¡ï¸ Chequeo de tipos */
    "strict": true,
    "skipLibCheck": true,

    /* ğŸ“¦ Permitir .js y JSON */
    "allowJs": true,
    "resolveJsonModule": true,

    /* âœ¨ Reescribe imports para que Node los entienda */
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
